{
  "name": "host-email",
  "description": "Servidor de email em reactjs e electron",
  "version": "0.1.0",
  "private": true,
  "author": "Felipe Rocha Germano",
  "license": "MIT",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/germano10/host-email.git"
  },
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "prod": "build --em.main=build/electron.js",
    "release": "build --em.main=build/electron.js --publish=never",
    "preprod": "npm run build",
    "prerelease": "npm run build"
  },
  "dependencies": {
    "cross-env": "^5.1.3",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.14",
    "electron-updater": "^2.19.1",
    "node-notifier": "^5.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "concurrently": "3.5.1",
    "electron": "1.7.10",
    "electron-builder": "^19.54.0",
    "prettier": "^1.10.2",
    "react-scripts": "^1.1.0",
    "wait-on": "^2.1.0"
  },
  "build": {
    "appId": "work.germano.host-email",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github"
    }
  }
}
